<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnzx.loan.mapper.UserMapper">

    <!-- 基本表 开始 -->
    <sql id="BASE_TABLE">
        tb_user
    </sql>
    <!-- 基本表 结束 -->

    <!-- 基本列 开始 -->
    <sql id="BASE_COLUMN">
        uid, username, password, avatar, gender, age, id_card, ancestral_home, current_residence,
        family_population, remark, create_time, update_time
    </sql>
    <!-- 基本列 结束 -->

    <!-- 添加用户 开始 -->
    <insert id="saveUser" parameterType="com.hnzx.loan.model.User">
        INSERT INTO
            <include refid="BASE_TABLE" />
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="BASE_COLUMN" />
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{uid, jdbcType=BIGINT},
            #{username, jdbcType=VARCHAR},
            #{password, jdbcType=VARCHAR},
            #{avatar, jdbcType=VARCHAR},
            #{gender, jdbcType=VARCHAR},
            #{age, jdbcType=INTEGER},
            #{idCard, jdbcType=VARCHAR},
            #{ancestralHome, jdbcType=VARCHAR},
            #{currentResidence, jdbcType=VARCHAR},
            #{familyPopulation, jdbcType=INTEGER},
            #{remark, jdbcType=VARCHAR},
            #{createTime, jdbcType=DATE},
            #{updateTime, jdbcType=DATE}
        </trim>
    </insert>
    <!-- 添加用户 结束 -->

    <!-- 查找用户 开始 -->
    <select id="findUserById" parameterType="long" resultType="com.hnzx.loan.model.User">
        SELECT
            <include refid="BASE_COLUMN" />
        FROM
            <include refid="BASE_TABLE" />
        WHERE
            uid = #{uid, jdbcType=BIGINT}
    </select>
    <!-- 查找用户 结束 -->

    <!-- 查找所有用户 开始 -->
    <select id="findAllUser" resultType="com.hnzx.loan.model.User">
        SELECT
            <include refid="BASE_COLUMN" />
        FROM
            <include refid="BASE_TABLE" />
    </select>
    <!-- 查找所有用户 结束 -->

    <!-- 更新用户 开始 -->
    <update id="updateUser" parameterType="com.hnzx.loan.model.User">
        UPDATE
            <include refid="BASE_TABLE" />
        SET
        <if test="username != null">
            username = #{username, jdbcType=VARCHAR}
        </if>
    </update>
    <!-- 更新用户 结束 -->

    <!-- 删除用户 开始 -->
    <delete id="deleteUser" parameterType="long">
        DELETE
        FROM
            <include refid="BASE_TABLE" />
        WHERE
            uid = #{uid, jdbcType=BIGINT}
    </delete>
    <!-- 删除用户 结束 -->

</mapper>